<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.ticotren.Home">
    <!--Layout principal. Contiene los horizontal scroll view "-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp">
        <RelativeLayout
            android:layout_width="600dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/estacion1"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="Estacion 1"
                android:paddingTop="10sp"
                android:paddingRight="50dp"
                />
            <TextView
                android:id="@+id/estacion2"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="Estacion 2"
                android:paddingTop="10sp"
                android:paddingRight="50dp"
                android:layout_toRightOf="@id/estacion1"
                />
            <TextView
                android:id="@+id/estacion3"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="Estacion 3"
                android:paddingTop="10sp"
                android:paddingRight="50dp"
                android:layout_toRightOf="@id/estacion2"
                />
            <TextView
                android:id="@+id/estacion4"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="Estacion 4"
                android:paddingTop="10sp"
                android:paddingRight="50dp"
                android:layout_toRightOf="@id/estacion3"
                />
            <TextView
                android:id="@+id/horaestacion1"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="00:00"
                android:paddingTop="10sp"
                android:paddingRight="50dp"

                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/horaestacion2"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="00:00"
                android:paddingTop="10sp"
                android:paddingRight="50dp"
                android:layout_toRightOf="@id/horaestacion1"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/horaestacion3"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="00:00"
                android:paddingTop="10sp"
                android:paddingRight="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/horaestacion2"
                />
            <TextView
                android:id="@+id/horaestacion4"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="20sp"
                android:text="00:00"
                android:paddingTop="10sp"
                android:paddingRight="50dp"
                android:layout_toRightOf="@id/horaestacion3"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="50dp">
            <RelativeLayout
                android:layout_width="600dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="600dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/test"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/estacion5"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:textSize="20sp"
                    android:text="Estacion 1"
                    android:paddingTop="10sp"
                    android:paddingRight="50dp"
                    />
                <TextView
                    android:id="@+id/estacion6"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:textSize="20sp"
                    android:text="Estacion 2"
                    android:paddingTop="10sp"
                    android:paddingRight="50dp"
                    android:layout_toRightOf="@id/estacion5"
                    />
                <TextView
                    android:id="@+id/estacion7"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:textSize="20sp"
                    android:text="Estacion 3"
                    android:paddingTop="10sp"
                    android:paddingRight="50dp"
                    android:layout_toRightOf="@id/estacion6"
                    />
                <TextView
                    android:id="@+id/estacion8"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:textSize="20sp"
                    android:text="Estacion 4"
                    android:paddingTop="10sp"
                    android:paddingRight="50dp"
                    android:layout_toRightOf="@id/estacion7"
                    />
            </RelativeLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal"
            >


            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Ver Horario"
                android:layout_marginRight="100sp"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_settings_black_24dp"/>

        </LinearLayout>
        <!--Final del Layout Vertical-->
    </LinearLayout>


</RelativeLayout>
